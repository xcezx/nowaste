!!!
%html{:lang => "ja", "xml:lang" => "ja", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{"http-equiv" => "content-type", :content => "text/html; charset=utf-8"}
    %title= @title
    %link{:href => "/css/easy.css", :media => "screen", :rel => "stylesheet"}
    %link{:href => "/css/easyprint.css", :media => "print", :rel => "stylesheet"}
    %link{:href => "/css/stylesheet.css", :media => "screen", :rel => "stylesheet"}
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js", :type => "text/javascript"}
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js", :type => "text/javascript"}
    %script{:src => "/js/easy.js", :type => "text/javascript"}
    %script{:src => "/js/main.js", :type => "text/javascript"}
  %body
    #container
      #header
        %h1
          %a{:href => "/"}= @title
        %ul#nav
          %li
            %a{:href => "#add-outgo"} 出金登録
          %li
            %a{:href => "#add-income"} 入金登録
      .content
        .main
          = yield

          .cols
            .col.first
              %form#add-outgo{:action => "/outgo/add", :method => "post"}
                %fieldset
                  %legend 出金
                  %div
                    %label{:for => "outgo_category_id"} 項目
                    %select.required{:id => "outogo_category_id", :name => "outgo[outgo_category_id]"}
                      %option ---
                      - @outgo_categories.each do |category|
                        %option{:value => category.id}= category.name
                  %div
                    %label{:for => "outgo_price"} 金額
                    %input.required{:type => "text", :id => "outgo_price", :name => "outgo[price]"}
                  %div
                    %label{:for => "outgo_comment"} 詳細
                    %input{:type => "text", :id => "outgo_comment", :name => "outgo[comment]"}
                  .submit
                    %button{:type => "submit"} 登録
            .col
              %form#add-income{:action => "/income/add", :method => "post"}
                %fieldset
                  %legend 入金
                  %div
                    %label{:for => "income_category_id"} 項目
                    %select.required{:id => "income_category_id", :name => "income[income_category_id]"}
                      %option ---
                      - @income_categories.each do |category|
                        %option{:value => category.id}= category.name
                  %div
                    %label{:for => "income_price"} 金額
                    %input.required{:type => "text", :id => "income_price", :name => "income[price]"}
                  %div
                    %label{:for => "income_comment"} 詳細
                    %input{:type => "text", :id => "income_comment", :name => "income[comment]"}
                  .submit
                    %button{:type => "submit"} 登録
